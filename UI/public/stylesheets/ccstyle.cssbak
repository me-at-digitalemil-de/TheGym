 body {
  margin: 40px;
}

.box {
  background-color: #444;
  color: #fff;
  border-radius: 5px;
  padding: 40px;
  font-size: 150%;
  cursor:hand;
}
.box:hover {
  color:blue;
  background-color: #ccc;
}

.box:nth-child(even) {
  background-color: #ccc;
  color: #000;
  cursor:hand;
}

.wrapper {
        display: grid;
    grid-gap: 10px;
        grid-template-columns: repeat(auto-fit, minmax(200px,1fr));
    }

.top-margin {
     margin-top:10px;
 }
